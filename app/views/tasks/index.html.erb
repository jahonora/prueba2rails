<div class="container">
  <div class="row">
  <% @tasks.each_slice(4) do |row| %>
    <% row.each do |task| %>
    <div class="col">
      <div class="card">
        <%= image_tag task.image, class: 'card-img-top' %>
        <div class="body">
          <h5> <%= link_to("#{task.title[0..20]} (#{task.users.count})", task_path(task)) %>  </h5>
          <% if task.users.include?(current_user) %>
            <%= link_to("NO Listo", undone_task_path(task), method: :delete, class: "btn btn-danger") %>
          <% else %>  
            <%= link_to("Listo", done_task_path(task), method: :post, class: "btn btn-info") %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="w-100" style="margin-top:20px"></div>
  <% end %>
  </div>
</div>
